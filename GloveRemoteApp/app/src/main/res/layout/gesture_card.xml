<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/abc_control_padding_material">

            <LinearLayout
                android:id="@+id/gesture_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/gesture_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/gesture_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="15sp" />

            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editGesture"
                android:clickable="true"
                android:src="@drawable/ic_thumbs_up_down_black_24dp"
                android:background="@android:color/white"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_alignParentRight="true"
                android:tint="#ff95d45e" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>